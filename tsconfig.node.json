{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  // "compilerOptions": {
    // "composite": true,
    // "noEmit": true,
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // "module": "ESNext",
    // "moduleResolution": "Bundler",
    // "types": ["node"]
  // }
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
}
